<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ycxy.realestate.dao.BaseRoomDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.ycxy.realestate.entity.BaseRoomEntity" id="baseRoomMap">
        <result property="id" column="id"/>
        <result property="no" column="no"/>
        <result property="buildNo" column="build_no"/>
        <result property="buildId" column="build_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    <select id="listBuilds" resultType="java.lang.String">
        select distinct build_id from base_room;
    </select>
    <select id="countByBuildId" resultType="java.util.Map">
        select status, count(1) as cnt from base_room where build_id = #{buildId} group by  status
    </select>


</mapper>
